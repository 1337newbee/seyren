<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:task="http://www.springframework.org/schema/task" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
        
        <context:component-scan base-package="com.seyren" />
        
        <task:annotation-driven />
        
        <bean class="com.seyren.core.value.GraphiteConfig">
               <constructor-arg value="http://graphite.int.ent.nokia.com" />
               <constructor-arg value="/render?from=-5minutes&amp;until=now&amp;uniq=%s&amp;format=json&amp;target=%s" />
        </bean>
        
</beans>
